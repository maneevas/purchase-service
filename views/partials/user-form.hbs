
<header class="text-center py-1">
 <div class="container">
            <div class="row">
                <div class="col-lg-6 col-8 mx-auto">
                    
                        <div class="form-group">
                            <label for="name">Имя</label>
                            <input type="text" class="form-control" id="name" name="name" required minlength="2" maxlength="30" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <label for="surname">Фамилия</label>
                            <input type="text" class="form-control" id="surname" name="surname" required minlength="2" maxlength="30" value="{{surname}}">
                        </div>
                        <div class="form-group">
                            <label for="patname">Отчество</label>
                            <input type="text" class="form-control" id="patname" name="patname" required minlength="2" maxlength="30" value="{{patname}}">
                        </div>
                            <div class="form-group">
                            <label for="location">Город</label>
                            <input type="text" class="form-control" id="location" name="location" required minlength="2" maxlength="30" value="{{location}}"
                        </div>
                        <div class="form-group">
                            <label for="text">Логин</label>
                            <input type="text" class="form-control" id="email" name="email" required minlength="6" maxlength="15" value="{{email}}">
                        </div>
                            <div class="form-group">
                            <label for="password">Пароль</label>
                            <input type="password" class="form-control" id="password" name="password" required minlength="6" maxlength="30" value="{{password}}">
                        </div>
                        <div style="padding-top: 20px;"><button type="submit" id="submit" name="submit" class="btn btn-dark">Сохранить</button></div>
                </div>
            </div>
        </div>
    </div>


