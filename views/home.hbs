{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
Пользователь успешно удален.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
    <div class="col-6"><h1>Пользователи</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" type="button" class="btn btn-primary align-self-center">Новый пользователь</a>
    </div>

</div>


<table class="table table-boarded">
  <thead class="thead-dark">
    <tr>
      <th scope="col">id</th>
      <th scope="col">Фамилия</th>
      <th scope="col">Имя</th>
      <th scope="col">Отчество</th>
      <th scope="col">Город</th>
      <th scope="col">Email</th>
      <th scope="col">Права</th>
      <th scope="col" class="text-end">Действия</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.surname}}</td>
      <td>{{this.name}}</td>
      <td>{{this.patname}}</td>
      <td>{{this.location}}</td>
      <td>{{this.email}}</td>
      <td>{{this.is_admin}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>Профиль</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Изменить</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Удалить</a>
      </td>
    </tr>

    {{/each}}
  </tbody>
</table>