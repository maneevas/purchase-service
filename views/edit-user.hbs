<div class="row" style="padding-top: 80px;">
    <div class="col-12"><h2>Редактировать данные пользователя</h2></div>
     <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/dashboard">База пользователей</a></li>
    <li class="breadcrumb-item active" aria-current="page">Изменение данных пользователя</li>
  </ol>
</nav>
</div>

<div id="snackbar">{{alert}}</div>

{{#each rows}}
<form action="/dashboard/edituser/{{this.id}}" class="row g-3 needs-validation" method="POST" novalidate>
    {{> user-form}}
</form>
{{/each}}

<script src="/javascript/snackbar.js"></script>
<script>
  if ("{{alert}}") {
    var message = "{{alert}}";
    if (message !== undefined && message !== null) {
      snackBAR(message);
    }
  }
</script>