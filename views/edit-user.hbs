<div class="row" style="padding-top: 80px;">
    <div class="col-12"><h2>Редактировать данные пользователя</h2></div>
     <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/dashboard">Панель управления</a></li>
    <li class="breadcrumb-item active" aria-current="page">Изменение данных пользователя</li>
  </ol>
</nav>
</div>

{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
{{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#each rows}}
<form action="/dashboard/edituser/{{this.id}}" class="row g-3 needs-validation" method="POST" novalidate>
    {{> user-form}}
</form>
{{/each}}